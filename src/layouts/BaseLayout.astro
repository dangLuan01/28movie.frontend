---
//import { ClientRouter, fade } from "astro:transitions";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
const { meta = {} } = Astro.props;
const { title, genres, jsonLd } = Astro.props;
const description = meta.description || "Xem phim online chất lượng cao, cập nhật phim mới nhanh nhất tại Xoai Lac TV. Thư viện phim bộ, phim lẻ, phim chiếu rạp đa dạng thể loại.";
const rel = Astro.url;
const image = meta.image
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
		<meta name="robots" content="index, follow" />
		<!-- Favicons -->
		<link rel="icon" type="image/png" href="/img/icon/favicon-32x32.png" sizes="32x32" />
		<link rel="apple-touch-icon" href="/img/icon/favicon-32x32.png" />
		<link rel="canonical" href={ rel }>
		<title>{title ? title : 'Xoai Lac TV'}</title>
		<meta name="description" content={ description } />
		<meta name="title" content={ title ? title : 'Xoai Lac TV' }>
		<meta property="og:image" content={ image ?? '' }>
        <!-- meta SEO Facebook-Linkedln -->
		<meta property="og:title" content={ title ? title : 'Xoai Lac TV' } />
		<meta property="og:description" content={ description }/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content={ rel } />
		<meta property="og:image" content={ image ?? '' } />
		<meta property="og:site_name" content="Website Xoai Lac TV" />
		<!-- End meta SEO Facebook-Linkedln -->
		<!-- meta SEO Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title ? title : 'Xoai Lac TV'} />
		<meta name="twitter:description" content={ description } />
		<meta name="twitter:image" content={ image ?? '' } />
		<meta name="twitter:site" content="@username" />
		<!-- End meta SEO Twitter -->
		<meta name="referrer" content="strict-origin-when-cross-origin" />

		<!-- <ClientRouter /> -->
		<meta name="google-site-verification" content="Q-yKVDruiBc1qqNbeO6Yw9wLPoLfaUpjt6mbQtIpobE" />
		<!-- seoSchemaHomePage -->
		<script type="application/ld+json">
			[
				{
					"@context": "https://schema.org",
					"@type": "WebSite",
					"name": "Xoai Lac TV",
					"url": "https://www.xoailac.top/",
				},
				{
					"@context": "https://schema.org",
					"@type": "Organization",
					"name": "Xoai Lac TV",
					"url": "https://www.xoailac.top/",
					"logo": "https://www.xoailac.top/images/logo.svg",
					"sameAs": [
					"https://www.facebook.com/xoailactv",
					"https://twitter.com/xoailactv",
					"https://www.instagram.com/xoailactv",
					"https://www.tiktok.com/@xoailactv"
					]
				}
			]
		</script>
		{ jsonLd && 
		<script type="application/ld+json" set:html={jsonLd} />
		}
		<!-- endSeoSchemaHoamePage -->
	</head>
	<body>
		<!-- header (relative style) -->
		<Header />
		<!-- end header -->
        <!-- main content -->
		<main>
			<slot />
		</main>
        <!-- end main content --> 
        <!-- footer -->
		<Footer genres={genres}/>
        <!-- end footer -->
		<!-- JS -->
		<script src="/js/jquery-3.5.1.min.js" type="module"></script>
		<script src="/js/bootstrap.bundle.min.js" type="module"></script>
		<script src="/js/owl.carousel.min.js" type="module"></script>
		<script src="/js/slider-radio.js" type="module"></script>
		<script src="/js/select2.min.js" type="module"></script>
		<script src="/js/jquery.magnific-popup.min.js" type="module"></script>
		<script src="/js/jquery.magnific-popup.min.js" type="module"></script>
		<script>import "../styles/js/main.js";</script>
	</body>
	
</html>